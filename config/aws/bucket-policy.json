{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowCloudFrontOACReadPublicContent",
            "Effect": "Allow",
            "Principal": {
                "Service": "cloudfront.amazonaws.com"
            },
            "Action": "s3:GetObject",
            "Resource": [
                "arn:aws:s3:::${BUCKET_NAME}/catalog.json",
                "arn:aws:s3:::${BUCKET_NAME}/collections/*",
                "arn:aws:s3:::${BUCKET_NAME}/data/*",
                "arn:aws:s3:::${BUCKET_NAME}/browser/*",
                "arn:aws:s3:::${BUCKET_NAME}/potree/*"
            ],
            "Condition": {
                "StringEquals": {
                    "AWS:SourceArn": "arn:aws:cloudfront::${AWS_ACCOUNT_ID}:distribution/${DISTRIBUTION_ID}"
                }
            }
        },
        {
            "Sid": "AllowCloudFrontOACListBucket",
            "Effect": "Allow",
            "Principal": {
                "Service": "cloudfront.amazonaws.com"
            },
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::${BUCKET_NAME}",
            "Condition": {
                "StringEquals": {
                    "AWS:SourceArn": "arn:aws:cloudfront::${AWS_ACCOUNT_ID}:distribution/${DISTRIBUTION_ID}"
                },
                "StringLike": {
                    "s3:prefix": [
                        "catalog.json",
                        "collections/*",
                        "data/*",
                        "browser/*",
                        "potree/*"
                    ]
                }
            }
        },
        {
            "Sid": "AllowIAMFullAccessToPrivatePaths",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::${AWS_ACCOUNT_ID}:root"
            },
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::${BUCKET_NAME}/raw/*",
                "arn:aws:s3:::${BUCKET_NAME}/staging/*",
                "arn:aws:s3:::${BUCKET_NAME}/logs/*",
                "arn:aws:s3:::${BUCKET_NAME}/tmp/*"
            ]
        },
        {
            "Sid": "AllowIAMListBucket",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::${AWS_ACCOUNT_ID}:root"
            },
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::${BUCKET_NAME}"
        },
        {
            "Sid": "DenyInsecureTransport",
            "Effect": "Deny",
            "Principal": "*",
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::${BUCKET_NAME}",
                "arn:aws:s3:::${BUCKET_NAME}/*"
            ],
            "Condition": {
                "Bool": {
                    "aws:SecureTransport": "false"
                }
            }
        }
    ]
}
